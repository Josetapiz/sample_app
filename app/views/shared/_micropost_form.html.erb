<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", class: 'message' %>
    <div class="thisD"><span class="countdown"></span></div>
  </div>
    <%= f.submit "Post", :disable_with => "Posting...", class: "lolo btn btn-large btn-primary" %>
<% end %>